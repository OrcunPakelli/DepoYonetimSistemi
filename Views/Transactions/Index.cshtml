@model IEnumerable<DepoYonetimSistemi.Models.Transaction>

<h2>İşlem Geçmişi</h2>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Kullanıcı</th>
            <th>Ürün</th>
            <th>İşlem</th>
            <th>Miktar</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.User?.UserName</td>
                <td>@log.Product?.SerialNumber</td>
                <td>@log.TransactionType</td>
                <td>@log.Quantity</td>
                <td>@log.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>