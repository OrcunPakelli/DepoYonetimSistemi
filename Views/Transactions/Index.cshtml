@model IEnumerable<DepoYonetimSistemi.Models.Transaction>
@using DepoYonetimSistemi.Models

@{
    ViewData["Title"] = "Loglar";
    var qUserIds = Context.Request.Query["userIds"].ToList();
    var qTypes = Context.Request.Query["types"].ToList();
    string q(string key) => Context.Request.Query[key].ToString();
}

<button id="filterToggleBtn" class="filter-toggle-btn" type="button">
    <i id="filterArrow" class="fa-solid fa-chevron-down"></i>
    Filtreler
</button>

<!-- FİLTRE PANELİ -->  
<div id="filterPanel" class="filter-panel mb-4">


    <form method="get" class="p-3">
        <h5 class="mb-3">İşlem Tipi</h5>

        <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" name="types" value="In"
                   id="typeIn" @(qTypes.Contains("In") ? "checked" : "") />
            <label class="form-check-label" for="typeIn">Giriş</label>
        </div>
    <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="types" value="Out"
                   id="typeOut" @(qTypes.Contains("Out") ? "checked" : "") />
            <label class="form-check-label" for="typeOut">Çıkış</label>
        </div>

        <h5 class="mb-3">Kullanıcı</h5>
        <div style="max-height:240px; overflow:auto;" class="mb-3">
            @foreach (var u in (IEnumerable<User>)ViewBag.Users)
            {
                var idStr = u.UserId.ToString();
                <div class="form-check mb-2">
                    <input class="form-check-input" type="checkbox" name="userIds" value="@u.UserId"
                           id="user_@u.UserId" @(qUserIds.Contains(idStr) ? "checked" : "") />
                    <label class="form-check-label" for="user_@u.UserId">@u.UserName</label>
                </div>
            }
        </div>

        <h5 class="mb-3">Tarih</h5>

        <div class="mb-2">
            <label class="form-label">Başlangıç</label>
            <input type="date" class="form-control" name="startDate" value="@q("startDate")" />
        </div>
        
        <div class="mb-3">
            <label class="form-label">Bitiş</label>
            <input type="date" class="form-control" name="endDate" value="@q("endDate")" />
        </div>

        <div class="d-flex gap-2 mt-3">
            <button type="submit" class="btn btn-primary w-50">Filtrele</button>
            <a asp-action="Index" class="btn btn-outline-secondary w-50">Temizle</a>
        </div>
    </form>
</div>

<h2>İşlem Geçmişi</h2>
<div class="Table">
    <table class="styled-table" id="logTable">
        <thead>
            <tr>
                <th>Kullanıcı</th>
                <th>İşlem</th>
                <th>Seri Numarası</th>
                <th>Tarih</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.User?.UserName</td>
                        @if(log.TransactionType.ToString() == "In")
                        {
                            <td>Giriş</td>
                        }
                        else
                        {
                            <td>Çıkış</td>
                        }
                    <td>@log.SeriNo</td>
                    <td>@log.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<button class="btn btn-outline-primary mb-3" onclick="printTable()">
    Yazdır
</button>

@section Styles {
    <link rel="stylesheet" href="~/css/homeindex.css" />
}

@section Scripts {
    <script src="~/js/site.js"></script>
}
